
<%= form_tag "/sessions" do %>
  <%= label_tag :email %>
  <%= email_field_tag :email %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= submit_tag "Log in" %>
<% end %>

<% if flash[:notice] %>
    <div class="notice"> <font color="red"> <%= flash[:notice] %></div></font>
    <% flash.discard %>
<% end %>


Don't have an account? Click here to <%= link_to "Sign Up", "/signup" %>